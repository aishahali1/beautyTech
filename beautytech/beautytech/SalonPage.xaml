<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="beautytech.SalonPage"
    BackgroundColor="#FCF6FF">
    <ContentPage.Content>
     <StackLayout Padding="10" VerticalOptions="Center" >

             <Image Source="salonimage.jpeg" HeightRequest="200" WidthRequest="200"> </Image>

            
            <Picker ItemDisplayBinding="{Binding SerName}" Title="Skin" ItemsSource="{Binding SerSkin}"/>
            <Picker ItemDisplayBinding="{Binding SerName}" Title="Hair Cut" ItemsSource="{Binding SerHairCut}" />
            <Picker ItemDisplayBinding="{Binding SerName}" Title="Hair Color" ItemsSource="{Binding SerHairColor}"/>
            <Picker ItemDisplayBinding="{Binding SerName}" Title="Nails" ItemsSource="{Binding SerNails}"/>

           <StackLayout>
               <Button VerticalOptions="CenterAndExpand" CornerRadius="20" Text="continue" TextColor="#FCF6FF"
                    BackgroundColor="#28003B" Clicked="Button_Clicked">


               </Button>

           </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

